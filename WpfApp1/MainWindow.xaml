<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel x:Name="panelButtonHolder" Orientation="Vertical">
        <ContentControl Content="{Binding DynamicButton}"></ContentControl>
        <Button Content="Click me" Height="30" Width="100" Command="{Binding ClickMe}" Margin="346,0,346,10"/>
    </StackPanel>
</Window>
